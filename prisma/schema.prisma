model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String?
  link      String?   // optional link to UI e.g. /play/<id>
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
