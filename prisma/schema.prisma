// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // أو "mysql" أو "sqlite" حسب DB عندك
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("PLAYER")
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("PLAYER")
  avatarUrl String? 
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model MatchRequest {
  id          String   @id @default(cuid())
  title       String
  description String?
  location    String
  pitchId     String?    // إذا عندك جدول للملاعب، اربط هنا
  date        DateTime
  timeSlot    String?    // مثلاً "18:00-19:00"
  playersNeeded Int     @default(1) // عدد اللاعبين المطلوبين
  creator     User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId   String
  createdAt   DateTime @default(now())
  status      String   @default("OPEN") // OPEN / FULL / CLOSED
  participants Participation[]
}

model Participation {
  id         String @id @default(cuid())
  match      MatchRequest @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId    String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  joinedAt   DateTime @default(now())
  // role in match maybe: PLAYER / SUBSTITUTE
  role       String? 
}

model PlayRequest {
  id          String   @id @default(cuid())
  userId      String
  playerName  String
  area        String
  level       String
  date        DateTime
  needed      Int
  notes       String?
  phone       String
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

// prisma/schema.prisma (أضف/تأكد)
model PlayRequest {
  id          String   @id @default(cuid())
  userId      String
  name        String?    // اسم منشئ الطلب إن أردت
  playerName  String
  area        String
  level       String
  date        DateTime
  needed      Int
  description String?
  phone       String
  status      String   @default("OPEN") // OPEN / FULL / CANCELLED / PLAYED
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  participants Participation[]
}

model Participation {
  id         String @id @default(cuid())
  matchId    String
  userId     String
  joinedAt   DateTime @default(now())
  role       String?  // PLAYER / SUBSTITUTE
  // relations
  match      PlayRequest @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String?
  link      String?   // optional link to UI e.g. /play/<id>
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("PLAYER")
  avatarUrl String?
  createdAt DateTime @default(now())
  sessions  Session[]
  // relations
  matchRequests MatchRequest[] @relation("creator")
  participations Participation[]
  notifications Notification[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model MatchRequest {
  id            String   @id @default(cuid())
  title         String?
  description   String?
  area          String
  level         String
  date          DateTime
  playersNeeded Int
  status        String   @default("OPEN") // OPEN / FULL / CANCELLED / PLAYED
  creatorId     String
  creator       User     @relation(fields: [creatorId], references: [id], name: "creator")
  participants  Participation[]
  createdAt     DateTime @default(now())
}

model Participation {
  id        String      @id @default(cuid())
  matchId   String
  match     MatchRequest @relation(fields: [matchId], references: [id], onDelete: Cascade)
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt  DateTime    @default(now())
  role      String?
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  body      String?
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PlayRequest {
  id            String   @id @default(cuid())
  title         String?
  description   String?
  area          String
  level         String
  date          DateTime
  playersNeeded Int
  status        String   @default("OPEN")
  creatorId     String
  creator       User     @relation(fields: [creatorId], references: [id])
  participants  Participation[]
  createdAt     DateTime @default(now())
}
